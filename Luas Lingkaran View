# luas lingkaran view

package MENU;

import KELAS.luasLingkaran;

public class LingkaranView extends javax.swing.JPanel {

    public LingkaranView() {
        initComponents();
    }
private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
    luasLingkaran l = new luasLingkaran();
    double jari2 = Double.parseDouble(jTextField1.getText());
    double hasil = l.luaslingkar(jari2);

    jLabelHasil.setText(""+hasil);
    } 
    private javax.swing.JButton jButton1;
    private javax.swing.JLabel jLabel1;
    private javax.swing.JLabel jLabelHasil;
    private javax.swing.JTextField jTextField1;
    // End of variables declaration                   
}
